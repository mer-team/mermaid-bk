{
  "name": "mermaid-api",
  "version": "2.0.0",
  "description": "MERmaid API",
  "homepage": "https://mermaid.dei.uc.pt",
  "main": "src/server.js",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/mer-team/mermaid-bk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mer-team/mermaid-bk.git"
  },
  "author": "MERmaid Team (https://github.com/orgs/mer-team/people)",
  "scripts": {
    "dev": "nodemon",
    "start": "node src/server.js",
    "lint": "eslint \"src/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,css,md,json} --config ./.prettierrc.js",
    "test": "jest",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "markdown:lint": "markdownlint '**/*.md' --ignore node_modules",
    "markdown:fix": "markdownlint --fix '**/*.md' --ignore node_modules"
  },
  "dependencies": {
    "amqplib": "0.10.7",
    "async": "3.2.6",
    "axios": "^1.3.4",
    "bcrypt": "5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.1",
    "express-validator": "^6.15.0",
    "http": "^0.0.1-security",
    "jest-fetch-mock": "^3.0.3",
    "jsonwebtoken": "9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "regex": "^0.1.1",
    "request-ip": "^3.3.0",
    "sequelize": "^6.30.0",
    "socket.io": "^4.7.1",
    "supertest": "^7.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.17.0",
    "youtube-search": "^1.1.6"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.25.1",
    "commitlint": "^19.8.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "markdownlint-cli": "^0.44.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "sequelize-cli": "6.6.2",
    "yaml-lint": "^1.7.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ],
    "*.yml,*.yaml": [
      "yamllint",
      "prettier --write"
    ]
  }
}
