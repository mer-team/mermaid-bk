{
  "name": "mermaid-api",
  "version": "2.0.0",
  "description": "MERmaid API",
  "homepage": "https://mermaid.dei.uc.pt",
  "main": "src/server.js",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/mer-team/mermaid-bk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mer-team/mermaid-bk.git"
  },
  "author": "MERmaid Team (https://github.com/orgs/mer-team/people)",
  "scripts": {
    "dev": "nodemon",
    "start": "node src/server.js",
    "lint": "eslint \"**/*.{js,mjs,cjs}\"",
    "lint:fix": "eslint \"**/*.{js,mjs,cjs}\" --fix",
    "format": "prettier --write .",
    "test": "jest",
    "prepare": "husky",
    "preinstall": "npx only-allow yarn",
    "lint-staged": "lint-staged",
    "markdown:lint": "markdownlint '**/*.md' --ignore node_modules",
    "markdown:fix": "markdownlint --fix '**/*.md' --ignore node_modules",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed:undo": "npx sequelize-cli db:seed:undo",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:seed:undo:all": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "rm -rf src/uploads/final/* && yarn db:drop && yarn db:create && yarn db:migrate && yarn db:seed"
  },
  "dependencies": {
    "amqplib": "^0.10.8",
    "async": "3.2.6",
    "axios": "^1.3.4",
    "bcrypt": "5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.1",
    "express-validator": "^6.15.0",
    "http": "^0.0.1-security",
    "jest-fetch-mock": "^3.0.3",
    "jsonwebtoken": "9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "only-allow": "^1.2.1",
    "openapi-types": "^12.1.3",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "regex": "^0.1.1",
    "request-ip": "^3.3.0",
    "sequelize": "^6.30.0",
    "socket.io": "^4.7.1",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "youtube-search": "^1.1.6"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@types/node": "^22.15.18",
    "commitlint": "^19.8.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "markdownlint-cli": "^0.44.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.3",
    "typescript": "^5.8.3",
    "yaml-lint": "^1.7.0"
  },
  "packageManager": "yarn@4.9.1"
}
